{
  "manifest_version": 2,
  "name": "ジョブカンチェッカー",
  "homepage_url": "https://github.com/snaka/jobcan_checker",
  "version": "0.2",
  "description": "Observe Jobcan status",
  "icons": { "48": "images/icon.png" },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Jobcanチェッカー"
  },
  "background": {
    "scripts": ["lib/jquery-3.2.1.min.js", "background.js"],
    "persistent": false
  },
  "permissions": [
    "alarms",
    "notifications",
    "tabs",
    "storage",
    "https://ssl.jobcan.jp/"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
